`dpkg -L #{ARGV[0]}`.lines.select { |l| l =~ /\/usr\/lib\/ruby\/vendor_ruby\/.*\.rb$/ }.each do |f|
  f.gsub!(/\.rb$/, '')
  f.gsub!('/usr/lib/ruby/vendor_ruby/', '')
  f.chomp!
  begin
    require f
  rescue LoadError
    puts "#{f}: #{$!.inspect}"
  rescue RuntimeError
    puts "#{f}: #{$!.inspect}"
  rescue
    puts "#{f}: #{$!.inspect}"
  end
end
